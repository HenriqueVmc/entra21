
@{
    Layout = "~/Views/Shared/Master.cshtml";
}
<div class="row mt-3  mb-3">
    <div class="col-md-12">
        <div class="container border">           
            <h1 class="col-sm-12 display-4">Editar Conserto</h1>
            <hr />

            <form action="/Conserto/Update" method="POST" class="form-horizontal" onsubmit="">
                <!--validarFrm(); return false;-->
                <input type="hidden" name="Conserto.Id" value="@ViewBag.Conserto.Id" />
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="dono" class="col-sm-4 control-label">Dono: <span class="text-danger font-weight-bold">*</span></label>
                            <div class="col-sm-12" id="div-dono">
                                <input type="text" class="form-control" name="Conserto.DonoVeiculo" id="dono" placeholder="Ex: José da Silva" required onfocusout="" value="@ViewBag.Conserto.DonoVeiculo" />
                                @Html.ValidationMessage("Conserto.DonoVeiculo", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="modelo" class="col-sm-4 control-label">Modelo: <span class="text-danger font-weight-bold">*</span></label>
                            <div class="col-sm-12" id="div-modelo">
                                <input type="text" class="form-control" name="Conserto.ModeloVeiculo" id="modelo" placeholder="Ex: Gol Bola" required onfocusout="" value="@ViewBag.Conserto.ModeloVeiculo" />
                                @Html.ValidationMessage("Conserto.ModeloVeiculo", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="cor" class="col-sm-4 control-label">Cor: <span class="text-danger font-weight-bold">*</span></label>
                            <div class="col-sm-12" id="div-cor">
                                <input type="color" class="form-control" name="Conserto.CorVeiculo" id="cor" required onfocusout="" value="@ViewBag.Conserto.CorVeiculo" />
                                @Html.ValidationMessage("Conserto.CorVeiculo", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="situacao" class="col-sm-4 control-label">Situacao: <span class="text-danger font-weight-bold">*</span></label>
                            <div class="col-sm-12" id="div-situacao">
                                <input type="text" class="form-control" name="Conserto.Situacao" id="cor" required onfocusout="" value="@ViewBag.Conserto.Situacao" />
                                @Html.ValidationMessage("Conserto.Situacao", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12">

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-12">
                                <button type="submit" class="btn btn-outline-success" name="btnEnviar" id="btnEnviar">
                                    <i class="fa fa-save"> Cadastrar</i>
                                </button>
                                <button type="reset" class="btn btn-outline-danger float-right" name=" btnLimpar" id="btnLimpar">
                                    <i class="fa fa-trash"> Limpar</i>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>

            </form>

        </div>
    </div>
</div>

