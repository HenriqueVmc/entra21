@{
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="row mt-3">
    <div class="col-md-6 offset-3">
        <div class="container border">
            <h1 class="col-md-12 display-6">Editar Recrutadora</h1>

            <form action="/Recrutadora/Update" method="POST" class="form-horizontal">
                <input type="hidden" name="Recrutadora.Id" value="@ViewBag.Recrutadora.Id" />
                <div class="form-group">
                    <label for="nome" class="col-md-2 control-label">Nome</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" name="Recrutadora.Nome" id="nome" value="@ViewBag.Recrutadora.Nome" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="cpf" class="col-md-2 control-label">CPF</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" name="Recrutadora.Cpf" id="cpf" value="@ViewBag.Recrutadora.Cpf" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="salario" class="col-md-2 control-label">Salário</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" name="Recrutadora.Salario" id="salario" value="@ViewBag.Recrutadora.Salario" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="tempoEmpresa" class="col-md-4 control-label">Tempo de Empresa</label>
                    <div class="col-md-12">

                        <select class="form-control" name="Recrutadora.TempoEmpresa" id="tempoEmpresa">
                            @for (int i = 0; i < 7; i++)
                            {
                                if (i == @ViewBag.Recrutadora.TempoEmpresa)
                                {
                                    <option value="@i" selected="selected">@i anos</option>
                                }
                                else
                                {
                                    <option value="@i">@i anos</option>
                                }
                            }
                        </select>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary" name="btnenviar" id="btnenviar">
                            <i class="fa fa-pencil-alt"> Editar</i>
                        </button>
                        <button type="reset" class="btn btn-danger" name="btnlimpar" id="btnlimpar">
                            <i class="fa fa-trash"> Limpar</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
