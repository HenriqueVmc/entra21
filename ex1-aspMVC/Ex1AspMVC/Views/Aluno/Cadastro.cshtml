
@{
    Layout = "~/Views/Shared/Master.cshtml";
}
<div class="row mt-3  mb-3">
    <div class="col-md-12">
        <div class="container border">
            @Html.ActionLink("Novo Aluno", "Cadastro", "Aluno", new { @class = "btn btn-primary float-right mb-3 mt-3" }) <!--metodo, controller-->
            <h1 class="col-sm-12 display-4">Cadastro de Aluno</h1>
            <hr />

            <form action="/Aluno/Store" method="POST" class="form-horizontal" onsubmit="validarFrm()">
                <!--validarFrm(); return false;-->
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="nome" class="col-sm-4 control-label">Nome: <span class="text-danger font-weight-bold">*</span></label>
                            <div class="col-sm-12" id="div-nome">
                                <input type="text" class="form-control" name="Aluno.Nome" id="nome" placeholder="Ex: José da Silva" required onfocusout="validarNome()" value="@ViewBag.Aluno.Nome"/>
                                @Html.ValidationMessage("Aluno.Nome", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="codM" class="col-sm-4 control-label">Matrícula: <span class="text-danger font-weight-bold">*</span></label>
                            <div class="col-sm-12" id="div-codM">
                                <input type="text" class="form-control" name="Aluno.CodMatricula" id="codM" placeholder="Ex: 1234567890" required onfocusout="validarCodM()" value="@ViewBag.Aluno.CodMatricula"/>
                                @Html.ValidationMessage("Aluno.CodMatricula", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="frequencia" class="col-sm-4 control-label">Frequencia(<span class="font-weight-bold">%</span>): <span class="text-danger font-weight-bold">*</span></label>
                            <div class="col-sm-12" id="div-frequencia">
                                <input type="number" class="form-control" name="Aluno.Frequencia" id="frequencia" required onfocusout="validarFrequencia()" value="@ViewBag.Aluno.Frequencia" min="0" max="100"/>
                                @Html.ValidationMessage("Aluno.Frequencia", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                    <div class="col-md-4">
                        <div class="container border mt-3">
                            <div class="form-group">
                                <!--Cadastro de Notas-->
                                <div class="col-sm-12" id="div-notas">
                                    <label for="nota1" class="control-label">Nota 1: <span class="text-danger font-weight-bold">*</span></label>
                                    <input type="number" class="form-control" name="Aluno.Nota1" id="nota1" required value="@ViewBag.Aluno.Nota1" min="0" max="10"/>

                                    <label for="nota2" class="control-label">Nota 2: <span class="text-danger font-weight-bold">*</span></label>
                                    <input type="number" class="form-control" name="Aluno.Nota2" id="nota2" required value="@ViewBag.Aluno.Nota2" min="0" max="10"/>

                                    <label for="nota3" class="control-label">Nota 3: <span class="text-danger font-weight-bold">*</span></label>
                                    <input type="number" class="form-control" name="Aluno.Nota3" id="nota3" required value="@ViewBag.Aluno.Nota3" min="0" max="10"/>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12">

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-12">
                                <button type="submit" class="btn btn-outline-success" name="btnEnviar" id="btnEnviar">
                                    <i class="fa fa-save"> Cadastrar</i>
                                </button>
                                <button type="reset" class="btn btn-outline-danger float-right" name=" btnLimpar" id="btnLimpar">
                                    <i class="fa fa-trash"> Limpar</i>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>

            </form>

        </div>
    </div>
</div>
